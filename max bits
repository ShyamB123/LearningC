#include <iostream>
#include<bits/stdc++.h>
#include<string.h>

using namespace std;

int bin(int n,int k)
{
    int l;


    if(n==1)
    {
        /*l= cnt(k);
        cout<<"value of l is:"<<l<<endl;*/
        int x[k];
        int i;
          for(i=0;k>0;i++){
                x[i]=k%2;
                k=k/2;
            }

           int cnt=0;
            for(int j=0;j<i;j++){
                if(x[j]==1){
                    cnt++;
                }
            }
          //  cout<<"value of count is :"<<cnt<<endl;
        return cnt;
    }
    int pwr=0;
       int i,val;
       for(i=2;i<k;i=i*2)
       {
           pwr++;
       }
       val=i/2;


       int mxbin=val-1;

       k=k-mxbin;
       n--;
      // cout<<"the power is :"<<pwr<<endl;
      // cout<<"the val is :"<<val<<endl;
      // cout<<"maxbin id :"<<mxbin<<endl;

       return pwr +bin(n,k);
}

int main()
{
  long long  int T;
   cin>>T;
   while(T--)
   {
       int n,k;
       cin>>n>>k;
       int pwr=0;
       int i,val;
       /*for(i=2;i<k;i=i*2)
       {//cout<<"shyam"<<endl;
           pwr++;
       }
       val=i/2;
       //cout<<"the power is :"<<pwr<<endl;
       //cout<<"the val is :"<<val<<endl;

       int mxbin=val-1;*/
       int bits;

       bits=bin(n,k);
       cout<<bits<<endl;

   }
}
